# =============================================================================
# ViolationSentinel Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production
PROJECT_NAME=ViolationSentinel

# =============================================================================
# API Configuration
# =============================================================================
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://app.violationsentinel.com"]
RATE_LIMIT=100
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# =============================================================================
# Database Configuration (Required)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/violationsentinel
# For Docker: postgresql://postgres:postgres@postgres:5432/violationsentinel

# =============================================================================
# Redis Configuration (Required)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
# For Docker: redis://redis:6379/0

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_BROKER_URL=amqp://admin:admin@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/2
# For Docker: amqp://admin:admin@rabbitmq:5672/

# =============================================================================
# ElasticSearch Configuration
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
# For Docker: http://elasticsearch:9200

# =============================================================================
# NYC Open Data API (Required)
# =============================================================================
# Get your app token at: https://data.cityofnewyork.us/profile/edit/developer_settings
NYC_OPEN_DATA_APP_TOKEN=

# =============================================================================
# External API Keys (Optional but recommended)
# =============================================================================
# Stripe for payment processing
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Twilio for SMS alerts
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+15551234567

# SendGrid for email
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@violationsentinel.com

# =============================================================================
# Security Settings
# =============================================================================
SECURITY_HEADERS_ENABLED=true
ALGORITHM=HS256

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=

# Prometheus metrics
PROMETHEUS_ENABLED=true

# =============================================================================
# Slack Notifications (Optional)
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#violations-alerts

# =============================================================================
# AWS Configuration (Production)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=violationsentinel-data

# =============================================================================
# Kubernetes/Docker Settings (Production)
# =============================================================================
KUBE_CONFIG_PATH=~/.kube/config
DOCKER_REGISTRY=ghcr.io/nickaicc/violationsentinel

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ML_FEATURES=true
ENABLE_WEBHOOK_DELIVERY=true
ENABLE_REAL_TIME_UPDATES=true

# =============================================================================
# Test Configuration (Test Environment Only)
# =============================================================================
# TEST_DATABASE_URL=sqlite:///./test.db
# TEST_REDIS_URL=redis://localhost:6379/1
