# Environment Configuration Template
# Copy to .env and fill in your values

# ==================== Application ====================
APP_NAME=ViolationSentinel
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# ==================== Database ====================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/violation_sentinel
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0

# ==================== Celery ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==================== NYC Open Data ====================
NYC_APP_TOKEN=your-nyc-open-data-token-here

# ==================== CORS ====================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== Email (SendGrid) ====================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=alerts@violationsentinel.com

# ==================== SMS (Twilio) ====================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== Slack ====================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# ==================== AWS (Optional) ====================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=violation-sentinel-storage

# ==================== Monitoring ====================
PROMETHEUS_ENABLED=true
OTEL_ENABLED=false
OTEL_ENDPOINT=

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
